<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.louisgeek.louislikeuisegmentcontroldemo.MainActivity">

    <com.louisgeek.likeuisegmentlib.SegmentedControlView
        android:id="@+id/id_scv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/id_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_scv"
        android:text="change"/>

    <Button
        android:id="@+id/id_btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_btn"
        android:text="GET"/>

    <com.louisgeek.likeuisegmentlib.SegmentedControlView
        android:id="@+id/id_scv_two"
        android:layout_below="@id/id_btn_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
